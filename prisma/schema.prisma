generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Event {
  id                Int     @id @default(autoincrement())
  location          String
  lat               Float
  lng               Float
  date              String
  duration          Int
  creationDate      String
  description       String
  interested        Int     @default(0)
  social            Boolean
  socialDescription String?
  users             User[]  @relation("EventToUser")
  organiser         User? @relation(fields: [orgKey], references: [username], name: "Owner")
  orgKey            String?
}

model User {
  username String  @id
  password String
  clan     Clan?   @relation(fields: [clanKey], references: [name])
  clanKey  String?
  events   Event[] @relation("EventToUser")
  organisedEvents Event[] @relation("Owner")
}

model Clan {
  name        String  @id
  points      Int     @default(0)
  location    String?
  lat         Float?
  lng         Float?
  logo        String?
  description String
  members     User[]
}
