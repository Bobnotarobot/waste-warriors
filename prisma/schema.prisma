generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model Event {
  id                Int     @id @default(autoincrement())
  location          String
  lat               Float
  lng               Float
  date              String
  duration          Int
  creationDate      String
  description       String
  interested        Int     @default(0)
  users             User[]
  social            Boolean
  socialDescription String?
}

model User {
  username  String @id
  password  String
  clans     Clan[]
  events    Event[]
}

model Clan {
  name        String  @id
  points      Int     @default(0)
  location    String?
  lat         Float?
  lng         Float?
  logo        String?
  description String
  members     User[]
}