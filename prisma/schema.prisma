generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Event {
  id                Int     @id @default(autoincrement())
  location          String
  lat               Float
  lng               Float
  date              String
  duration          Int
  creationDate      String
  description       String
  interested        Int     @default(0)
  social            Boolean
  socialDescription String?
  orgKey            String
  organiser         User    @relation("Owner", fields: [orgKey], references: [username])
  users             User[]  @relation("EventToUser")
}

model User {
  username        String  @id
  password        String
  clanKey         String?
  organisedEvents Event[] @relation("Owner")
  clan            Clan?   @relation(fields: [clanKey], references: [name])
  events          Event[] @relation("EventToUser")
}

model Clan {
  name        String  @id
  points      Int     @default(0)
  location    String?
  lat         Float?
  lng         Float?
  logo        String?
  description String
  members     User[]
}
